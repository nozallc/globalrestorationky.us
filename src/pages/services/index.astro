---
import Layout from '@layouts/Layout.astro';
import { SITE, SERVICES } from '../../lib/site';
import { generateBreadcrumbSchema } from '../../lib/schema';

const title = `Services | ${SITE.name}`;
const description = 'Roofing insurance claims, water damage restoration, gutters, and siding across Central Kentucky.';

const breadcrumbs = generateBreadcrumbSchema([
  { name: 'Home', url: `${SITE.url}/` },
  { name: 'Services', url: `${SITE.url}/services` }
]);
---

<Layout title={title} description={description} canonical={`${SITE.url}/services`}>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbs)} />
  
  <!-- Background container with image and overlay -->
  <div class="relative min-h-screen bg-cover bg-center bg-no-repeat" style="background-image: url('/src/assets/services/services-truck.01.jpg');">
    <!-- Dark overlay for text readability (lightened for more image visibility) -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/55 via-black/50 to-black/55"></div>
    
    <!-- Content section with relative positioning to sit above overlay -->
    <section class="relative z-10 mx-auto max-w-6xl px-4 py-12">
      <h1 class="text-4xl font-black text-white drop-shadow-lg">Services</h1>
      <p class="mt-3 max-w-2xl text-base text-gray-100 drop-shadow-md">
        Our site is built around high-intent searches (emergency + insurance). Choose a service to see what's included and how we help.
      </p>

      <div class="mt-8 grid gap-4 md:grid-cols-2">
        {SERVICES.map((s) => (
          <a 
            href={`/services/${s.slug}`} 
            class="group rounded-2xl border-2 border-white/20 bg-white/95 backdrop-blur-sm p-6 transition-all duration-200 hover:border-white hover:bg-white hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-global-red focus:ring-offset-2"
          >
            <div class="text-xl font-extrabold text-slate-900 group-hover:text-global-blue">{s.name}</div>
            <p class="mt-2 text-sm text-slate-600">{s.short}</p>
            <div class="mt-4 text-sm font-semibold text-global-red group-hover:translate-x-1 transition-transform">Learn more â†’</div>
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>
