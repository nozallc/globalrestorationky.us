---
import Layout from '@layouts/Layout.astro';
import { SITE, SERVICES } from '../../lib/site';
import { generateBreadcrumbSchema } from '../../lib/schema';

const title = `Services | ${SITE.name}`;
const description = 'Roofing insurance claims, water damage restoration, gutters, and siding across Central Kentucky.';

const breadcrumbs = generateBreadcrumbSchema([
  { name: 'Home', url: `${SITE.url}/` },
  { name: 'Services', url: `${SITE.url}/services` }
]);
---

<Layout title={title} description={description} canonical={`${SITE.url}/services`}>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbs)} />
  <section class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-black text-global-blue">Services</h1>
    <p class="mt-3 max-w-2xl text-base text-slate-700">
      Our site is built around high-intent searches (emergency + insurance). Choose a service to see what’s included and how we help.
    </p>

    <div class="mt-8 grid gap-4 md:grid-cols-2">
      {SERVICES.map((s) => (
        <a href={`/services/${s.slug}`} class="group rounded-2xl border border-slate-200 bg-white p-6 hover:border-global-blue hover:shadow-sm">
          <div class="text-xl font-extrabold text-slate-900 group-hover:text-global-blue">{s.name}</div>
          <p class="mt-2 text-sm text-slate-600">{s.short}</p>
          <div class="mt-4 text-sm font-semibold text-global-red">Learn more →</div>
        </a>
      ))}
    </div>
  </section>
</Layout>
