---
import Layout from '@layouts/Layout.astro';
const title = 'Louisville Regional Hub | 24/7 Water Damage & Storm Restoration';
const description = 'Louisville hub for emergency water mitigation, storm roof repair, and insurance claim restoration. Serving Louisville, Shelbyville, and surrounding Ohio River communities.';
---
<Layout title={title} description={description}>
  <section class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-black text-global-blue">Louisville Regional Hub</h1>
    <p class="mt-3 max-w-2xl text-base text-slate-700">Serving Louisville, Shelbyville, and Ohio River communities with 24/7 water mitigation and storm restoration.</p>
    <section class="mt-8 mb-8" aria-label="Weather Impact">
      <h2 class="text-2xl font-bold mb-2">Weather Impact</h2>
      <ul class="list-disc pl-6 text-base text-slate-800">
        <li>Ohio River humidity and flooding risk</li>
        <li>Quick response via I-64 / I-264</li>
        <li>Neighborhoods: Highlands, St. Matthews, Middletown</li>
      </ul>
    </section>
    <ul class="mt-6 list-disc pl-6 text-base text-slate-800">
      <li><a href="/location/louisville/shelbyville">Shelbyville</a></li>
    </ul>

    <div class="mt-8">
      <a href="/service-areas">All Service Areas</a>
    </div>
  </section>
</Layout>
