---
import Layout from '@layouts/Layout.astro';
const title = 'South KY Regional Hub | Storm & Water Damage Restoration';
const description = 'South Kentucky hub for emergency water mitigation, storm restoration, and insurance claim support. Serving Somerset, Corbin, London, Berea, and Lake Cumberland region.';
---
<Layout title={title} description={description}>
  <section class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-black text-global-blue">South KY Regional Hub</h1>
    <p class="mt-3 max-w-2xl text-base text-slate-700">Serving Somerset, Corbin, London, Berea, and Lake Cumberland region with 24/7 water mitigation and storm restoration. <a href="/lexington-ky-roofing-storm-damage-restoration" class="font-semibold text-global-red hover:underline">View our Central Kentucky authority guide</a> for comprehensive recovery resources.</p>
    <section class="mt-8 mb-8" aria-label="Weather Impact">
      <h2 class="text-2xl font-bold mb-2">Weather Impact</h2>
      <ul class="list-disc pl-6 text-base text-slate-800">
        <li>Heavy wind and woodland storm paths</li>
        <li>I-75 corridor dispatch</li>
        <li>Lake Cumberland, Whitley/Knox region coverage</li>
      </ul>
    </section>
    <ul class="mt-6 list-disc pl-6 text-base text-slate-800">
      <li><a href="/location/south-ky/somerset">Somerset</a></li>
      <li><a href="/location/south-ky/corbin">Corbin</a></li>
      <li><a href="/location/south-ky/london">London</a></li>
      <li><a href="/location/south-ky/berea">Berea</a></li>
    </ul>

    <div class="mt-8">
      <a href="/service-areas">All Service Areas</a>
    </div>
  </section>
</Layout>
