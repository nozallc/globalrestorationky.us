---
import Layout from '@layouts/Layout.astro';
import { SITE } from '../../lib/site';
const title = `GC vCard | ${SITE.name}`;
const description = 'Download contact card.';
---

<Layout title={title} description={description} canonical={`${SITE.url}/the-team/gc-vcf`} noindex={true}>
  <section class="mx-auto max-w-3xl px-4 py-16">
    <h1 class="text-3xl font-black text-global-blue">Download vCard</h1>
    <p class="mt-3 text-sm text-slate-600">If your download doesn't start, use the button below.</p>
    <div class="mt-6">
      <a class="inline-flex items-center justify-center rounded-lg bg-global-red px-5 py-3 text-sm font-semibold text-white hover:opacity-95"
         href="/the-team/gc.vcf" download>
        Download GC vCard
      </a>
    </div>

    <meta http-equiv="refresh" content="0; url=/the-team/gc.vcf" />
  </section>
</Layout>
