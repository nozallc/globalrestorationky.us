---
import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import { SITE } from '../../lib/site';
import jePhoto from '../../assets/the-team/je-photo.webp';
import ocPhoto from '../../assets/the-team/oc-photo.webp';
import gcPhoto from '../../assets/the-team/gc-photo.webp';

const title = `About Our Team | ${SITE.name}`;
const description = 'Meet the Global Restoration team. Licensed contractors providing insurance claim documentation, roof expertise, and water damage restoration across Central Kentucky.';
---

<Layout title={title} description={description} canonical={`${SITE.url}/the-team`}>
  <section class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-black tracking-tight text-global-blue">Our Team</h1>
    <p class="mt-3 max-w-2xl text-base text-slate-700">
      We’re a Kentucky-based restoration team focused on insurance documentation, clear communication, and high-quality repairs.
    </p>

    <!-- Quick Facts -->
    <div class="mt-8 grid gap-3 max-w-2xl">
      <div class="flex items-start gap-3">
        <span class="text-global-red font-bold flex-shrink-0 mt-0.5">✓</span>
        <span class="text-sm text-slate-700"><strong>Licensed & Insured:</strong> Full licensing and insurance coverage for Central Kentucky homeowners</span>
      </div>
      <div class="flex items-start gap-3">
        <span class="text-global-red font-bold flex-shrink-0 mt-0.5">✓</span>
        <span class="text-sm text-slate-700"><strong>Documentation Experts:</strong> We provide clear, detailed damage assessments and scopes for insurance claims</span>
      </div>
      <div class="flex items-start gap-3">
        <span class="text-global-red font-bold flex-shrink-0 mt-0.5">✓</span>
        <span class="text-sm text-slate-700"><strong>24/7 Response:</strong> Emergency availability for storm damage, leaks, and water mitigation</span>
      </div>
    </div>

    <div class="mt-12 grid gap-4 md:grid-cols-2">
      <div class="rounded-2xl border border-slate-200 bg-white p-6">
        <div class="text-sm font-semibold text-slate-500">Contact</div>
        <div class="mt-2 text-xl font-extrabold text-slate-900">{SITE.name}</div>
        <div class="mt-3 space-y-1 text-sm text-slate-700">
          <div><span class="font-semibold">Phone:</span> <a class="underline" href={`tel:${SITE.tel}`}>{SITE.phone}</a></div>
          <div><span class="font-semibold">Email:</span> <a class="underline" href={`mailto:${SITE.email}`}>{SITE.email}</a></div>
          <div><span class="font-semibold">Address:</span> {SITE.addressLine}</div>
        </div>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
        <div class="text-sm font-semibold text-slate-500">Meet Our Experts</div>
        <p class="mt-4 text-sm text-slate-600">
          View detailed profiles of our team.
        </p>

        <div class="mt-6 grid gap-4 md:grid-cols-2">
          <!-- Joe Espinoza Card -->
          <a href="/the-team/je" class="group rounded-lg border border-slate-200 bg-white p-4 hover:shadow-md transition">
            <div class="aspect-square overflow-hidden rounded-lg mb-3">
              <Image 
                src={jePhoto}
                alt="Joe Espinoza"
                class="w-full h-full object-cover group-hover:scale-105 transition"
                width={400}
                height={400}
                loading="lazy"
              />
            </div>
            <h3 class="font-bold text-slate-900">Joe Espinoza</h3>
            <p class="text-sm text-slate-600">Project Manager</p>
            <div class="mt-3 inline-flex items-center justify-center rounded-lg bg-global-blue px-3 py-2 text-xs font-semibold text-white group-hover:opacity-90 transition">
              View Profile
            </div>
          </a>

          <!-- Odvin Caceres Card -->
          <a href="/the-team/oc" class="group rounded-lg border border-slate-200 bg-white p-4 hover:shadow-md transition">
            <div class="aspect-square overflow-hidden rounded-lg mb-3">
              <Image 
                src={ocPhoto}
                alt="Odvin Caceres"
                class="w-full h-full object-cover group-hover:scale-105 transition"
                width={400}
                height={400}
                loading="lazy"
              />
            </div>
            <h3 class="font-bold text-slate-900">Odvin Caceres</h3>
            <p class="text-sm text-slate-600">Operations Manager</p>
            <div class="mt-3 inline-flex items-center justify-center rounded-lg bg-global-red px-3 py-2 text-xs font-semibold text-white group-hover:opacity-90 transition">
              View Profile
            </div>
          </a>

          <!-- Gigi Castellon Card -->
          <a href="/the-team/gc" class="group rounded-lg border border-slate-200 bg-white p-4 hover:shadow-md transition">
            <div class="aspect-square overflow-hidden rounded-lg mb-3">
              <Image 
                src={gcPhoto}
                alt="Gigi Castellon"
                class="w-full h-full object-cover group-hover:scale-105 transition"
                width={400}
                height={400}
                loading="lazy"
              />
            </div>
            <h3 class="font-bold text-slate-900">Gigi Castellon</h3>
            <p class="text-sm text-slate-600">Project Manager</p>
            <div class="mt-3 inline-flex items-center justify-center rounded-lg bg-global-blue px-3 py-2 text-xs font-semibold text-white group-hover:opacity-90 transition">
              View Profile
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
