---
import Layout from '@layouts/Layout.astro';
import QuickFacts from '../components/QuickFacts.astro';
import { SITE, SERVICES } from '../lib/site';
import { SERVICE_AREA_HUBS } from '../lib/serviceAreas';
import ServiceAreaLinks from '../components/ServiceAreaLinks.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/home/roofer.webp';

const title = '24/7 Water Damage Restoration & Storm Roof Repair Lexington KY';
const description = 'Emergency water cleanup and professional storm damage roof restoration in Lexington. Fast 24/7 response, detailed damage documentation, and local KY expertise. Schedule your priority inspection.';
---

<Layout title={title} description={description} canonical={`${SITE.url}/`}>
  <!-- HERO SECTION with Overlay -->
  <section class="relative h-screen min-h-[500px] flex items-center justify-center overflow-hidden">
    <!-- Hero Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <Image 
        src={heroImage}
        alt="Professional roofer performing inspection" 
        class="w-full h-full object-cover"
        widths={[640, 1024, 1440, 1920]}
        sizes="100vw"
        fetchpriority="high"
        loading="eager"
      />
      <div class="absolute inset-0 hero-overlay"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 mx-auto max-w-5xl px-4 text-center text-white">
      <p class="mb-4 inline-flex items-center gap-2 rounded-full bg-white/20 backdrop-blur-sm px-4 py-2 text-sm font-semibold text-white border border-white/30">
        <span class="h-2 w-2 rounded-full bg-yellow-300"></span>
        24/7 Emergency Response
      </p>
      <h1 class="hero-text text-5xl sm:text-6xl font-black tracking-tight mb-6 text-white drop-shadow-2xl">
        Lexington KY Roofing & Storm Damage Contractor
      </h1>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto drop-shadow-lg">
        24/7 emergency roofing & storm damage restoration. Licensed & insured serving Lexington and Central Kentucky homeowners.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/request-inspection" class="btn-primary">
          Request Free Inspection
        </a>
        <a href={`tel:${SITE.tel}`} class="px-6 py-3 bg-white text-navy-dark font-semibold rounded-lg hover:bg-gray-100 transition-all duration-200 transform hover:-translate-y-1" style="color: #1a202c;">
          Call {SITE.phone}
        </a>
      </div>
    </div>
  </section>

  <!-- Content Block Below Hero -->
  <section class="bg-white section-spacing">
    <div class="mx-auto max-w-5xl px-4 text-center">
      <p class="inline-flex items-center gap-2 rounded-full border border-accent-red/20 bg-accent-red/5 px-3 py-1 text-xs font-semibold text-accent-red justify-center">
        <span class="h-2 w-2 rounded-full bg-accent-red"></span>
        24/7 Emergency Response • Insurance Claim Help
      </p>
      <h1 class="mt-4 text-4xl font-black tracking-tight text-navy-dark sm:text-5xl">
        Kentucky Storm Damage Restoration, ready to assist with your project!
      </h1>
      <QuickFacts city="Lexington" />
      <p class="mt-4 mx-auto max-w-3xl text-lg leading-relaxed text-text-muted">
        We provide the <strong>contractor's perspective for roofing and water damage</strong>, supplying clear documentation and repair scopes that homeowners can submit to their insurance carrier in Lexington & Central KY.
      </p>

      <div class="mt-8 flex flex-col gap-3 sm:flex-row sm:justify-center items-center">
        <a href="/request-inspection" class="btn-primary inline-flex items-center justify-center">
          Request a Free Inspection
        </a>
        <a href={`tel:${SITE.tel}`} class="inline-flex items-center justify-center rounded-lg border-2 border-navy px-6 py-3 text-base font-semibold text-navy hover:bg-navy/5 transition-colors">
          Call {SITE.phone}
        </a>
      </div>
    </div>
  </section>

  <!-- SERVICES CARDS SECTION -->
  <section class="bg-white section-spacing">
    <div class="mx-auto max-w-5xl">
      <div class="mb-12">
        <h2 class="text-4xl font-bold text-navy-dark">Our Services</h2>
        <p class="mt-3 max-w-2xl text-lg text-text-muted leading-relaxed">
          Choose the service that matches your situation. We'll guide the next steps.
        </p>
      </div>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        {SERVICES.map((s) => (
          <a href={`/services/${s.slug}`} class="card-base group p-6 hover:shadow-card-hover">
            <div class="flex items-start justify-between gap-3">
              <div>
                <div class="text-lg font-bold text-navy group-hover:text-accent-red transition-colors">{s.name}</div>
                <p class="mt-2 text-sm text-text-muted">{s.short}</p>
              </div>
            </div>
            <div class="mt-4 text-sm font-semibold text-accent-red group-hover:text-accent-red-dark transition-colors">
              Learn more →
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- TRUST SIGNALS SECTION -->
  <section class="bg-bg-muted border-t border-border section-spacing">
    <div class="mx-auto max-w-5xl">
      <h2 class="text-4xl font-bold text-navy-dark text-center mb-12">Why Homeowners Trust Us</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        <div class="card-base p-6 text-center hover:shadow-card-hover">
          <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-navy/10 mb-4">
            <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="font-bold text-navy-dark mb-2">Licensed & Insured</div>
          <p class="text-sm text-text-muted">Fully certified and bonded for all restoration work in Kentucky.</p>
        </div>

        <div class="card-base p-6 text-center hover:shadow-card-hover">
          <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-accent-red/10 mb-4">
            <svg class="w-6 h-6 text-accent-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="font-bold text-navy-dark mb-2">24/7 Response</div>
          <p class="text-sm text-text-muted">Emergency response available day and night. 60 minutes or less.</p>
        </div>

        <div class="card-base p-6 text-center hover:shadow-card-hover">
          <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-navy/10 mb-4">
            <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="font-bold text-navy-dark mb-2">Insurance Support</div>
          <p class="text-sm text-text-muted">Professional documentation and adjuster coordination included.</p>
        </div>

        <div class="card-base p-6 text-center hover:shadow-card-hover">
          <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-navy/10 mb-4">
            <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <div class="font-bold text-navy-dark mb-2">Local Experts</div>
          <p class="text-sm text-text-muted">Based in Kentucky, serving Central KY communities.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- INSURANCE CLAIMS PROCESS SECTION -->
  <section class="bg-white">
    <div class="mx-auto max-w-6xl px-4 py-14">
      <h2 class="text-3xl font-extrabold text-slate-900 mb-8">How the Insurance Claim Process Works</h2>
      <div class="grid gap-6 md:grid-cols-3">
        {[
          { t: '1) Inspect & Document', d: 'We photograph damage, measure, and create a clear scope that an adjuster can review.' },
          { t: '2) Meet the Adjuster', d: 'We help you communicate facts and provide supporting documentation on site.' },
          { t: '3) Restore & Close Out', d: 'We complete repairs with quality materials and provide final documentation.' },
        ].map((step) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-card hover:shadow-hover transition-all duration-200">
            <div class="font-bold text-global-blue text-lg">{step.t}</div>
            <p class="mt-3 text-sm text-slate-600">{step.d}</p>
          </div>
        ))}
      </div>

      <div class="mt-10 rounded-2xl bg-slate-50 p-8 border border-slate-200">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <div class="text-2xl font-extrabold text-slate-900">Need help right now?</div>
            <p class="mt-1 text-slate-600">Start with a free inspection and documentation package.</p>
          </div>
          <div class="flex flex-col gap-3 sm:flex-row">
            <a href="/request-inspection" class="inline-flex items-center justify-center rounded-lg bg-global-red px-5 py-3 text-sm font-semibold text-white hover:opacity-95 transition-opacity shadow-btn whitespace-nowrap">
              Request Inspection
            </a>
            <a href={`tel:${SITE.tel}`} class="inline-flex items-center justify-center rounded-lg border border-slate-300 px-5 py-3 text-sm font-semibold text-slate-900 hover:bg-white transition-colors whitespace-nowrap">
              Call {SITE.phone}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICE AREAS SECTION -->
  <section class="mx-auto max-w-6xl px-4 py-14">
    <h2 class="text-3xl font-extrabold text-slate-900 mb-3">Service Areas Across Central Kentucky</h2>
    <p class="max-w-2xl text-base text-slate-700 mb-8">
      Competitors often skip city pages. We don't. Choose your area for local service details and FAQs.
    </p>

    <div class="mt-6">
      <ServiceAreaLinks hubs={SERVICE_AREA_HUBS} />
    </div>
  </section>
</Layout>
