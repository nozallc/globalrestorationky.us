---
import Layout from '@layouts/Layout.astro';
import { SITE } from '../lib/site';

const title = `Request a Free Inspection | ${SITE.name}`;
const description = 'Request a free roof or water damage inspection. Expert contractor assessment, detailed documentation for insurance claims, and 24/7 fast response across Central Kentucky.';
---

<Layout title={title} description={description} canonical={`${SITE.url}/request-inspection`}>
  <section class="bg-gradient-to-b from-white to-slate-50">
    <div class="mx-auto max-w-6xl px-4 py-12">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div>
          <p class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1 text-xs font-semibold text-slate-700">
            <span class="h-2 w-2 rounded-full bg-global-red"></span>
            Fast Scheduling • Insurance-Ready Assessment Included
          </p>
          <h1 class="mt-4 text-4xl font-black tracking-tight text-global-blue">
            Request a Free Inspection
          </h1>
          <p class="mt-3 text-base text-slate-700">
            Use this form to schedule a roof inspection or emergency water damage assessment. We'll follow up quickly with next steps.
          </p>

          <div class="mt-6 rounded-2xl border border-slate-200 bg-white p-6">
            <div class="text-sm font-bold text-slate-900">What you get</div>
            <ul class="mt-3 space-y-2 text-sm text-slate-600">
              <li>• Photos + documentation for your insurance claim</li>
              <li>• Clear scope of work recommendations</li>
              <li>• Guidance on talking with your adjuster</li>
              <li>• Emergency mitigation options (water/leaks)</li>
            </ul>
          </div>

          <div class="mt-6 rounded-2xl border border-slate-200 bg-slate-50 p-6">
            <div class="text-sm font-bold text-slate-900">Need immediate help?</div>
            <p class="mt-2 text-sm text-slate-600">
              Call now and we'll guide you through the next steps.
            </p>
            <a class="mt-4 inline-flex w-full items-center justify-center rounded-lg bg-global-red px-5 py-3 text-sm font-semibold text-white hover:opacity-95 sm:w-auto"
               href={`tel:${SITE.tel}`}>
              Call {SITE.phone}
            </a>
          </div>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="text-lg font-extrabold text-slate-900">Inspection Request Form</div>
          <p class="mt-2 text-sm text-slate-600">Fields marked * are required.</p>

          <!-- Success Message (hidden by default) -->
          <div id="form-success-message" class="hidden mt-6 animate-fade-in">
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 border-2 border-green-300 rounded-xl p-6 text-center">
              <div class="mb-4">
                <svg class="w-12 h-12 mx-auto text-green-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-green-700 mb-2">Thank you!</h3>
              <p class="text-sm text-green-600" id="success-message-text">Your inspection request has been received. We will call you within 2 hours.</p>
            </div>
          </div>

          <!-- Error Message (hidden by default) -->
          <div id="form-error-message" class="hidden mt-6">
            <div class="bg-gradient-to-br from-red-50 to-pink-50 border-2 border-red-300 rounded-xl p-6 text-center">
              <h3 class="text-lg font-bold text-red-700 mb-2">Oops!</h3>
              <p class="text-sm text-red-600" id="error-message-text">Something went wrong. Please try again.</p>
            </div>
          </div>

          <!-- Form -->
          <form id="inspection-form" class="mt-6 grid gap-4">
            <div class="grid gap-4 sm:grid-cols-2">
              <label class="grid gap-1 text-sm font-semibold text-slate-800">
                First name *
                <input name="first_name" type="text" autocomplete="given-name" required class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue" />
              </label>
              <label class="grid gap-1 text-sm font-semibold text-slate-800">
                Last name *
                <input name="last_name" type="text" autocomplete="family-name" required class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue" />
              </label>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
              <label class="grid gap-1 text-sm font-semibold text-slate-800">
                Phone *
                <input name="phone" type="tel" autocomplete="tel" required class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue" />
              </label>
              <label class="grid gap-1 text-sm font-semibold text-slate-800">
                Email
                <input name="email" type="email" autocomplete="email" class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue" />
              </label>
            </div>

            <label class="grid gap-1 text-sm font-semibold text-slate-800">
              Address *
              <input name="address" type="text" autocomplete="street-address" required class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue" />
            </label>

            <div class="grid gap-4 sm:grid-cols-2">
              <label class="grid gap-1 text-sm font-semibold text-slate-800">
                City *
                <input name="city" type="text" autocomplete="address-level2" required placeholder="Lexington, Georgetown, Richmond..." class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue" />
              </label>
              <label class="grid gap-1 text-sm font-semibold text-slate-800">
                Issue type *
                <select name="issue_type" required class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue">
                  <option value="">Select one</option>
                  <option>Roof leak / storm damage</option>
                  <option>Hail damage — insurance claim</option>
                  <option>Wind damage — insurance claim</option>
                  <option>Water damage / flooding</option>
                  <option>Gutters</option>
                  <option>Siding</option>
                  <option>Other</option>
                </select>
              </label>
            </div>

            <label class="grid gap-1 text-sm font-semibold text-slate-800">
              Is an insurance claim involved?
              <select name="insurance_claim" class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue">
                <option>No / Not sure yet</option>
                <option>Yes — claim already filed</option>
                <option>Yes — planning to file</option>
              </select>
            </label>

            <label class="grid gap-1 text-sm font-semibold text-slate-800">
              What happened? (details help) *
              <textarea name="details" required rows="5" class="rounded-lg border border-slate-300 px-3 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-global-blue"
                placeholder="Example: Hail storm last night, leaking near vent; water in bedroom ceiling; need documentation for adjuster."></textarea>
            </label>

            <!-- Honeypot -->
            <input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off" />

            <!-- Hidden source field -->
            <input type="hidden" name="source_page" value="inspection" />

            <!-- Turnstile Widget -->
            <div class="cf-turnstile" data-sitekey="0x4AAAAAAChrIccbKnyIJgRI" data-theme="light"></div>

            <button type="submit" id="submit-btn"
              class="mt-2 inline-flex items-center justify-center rounded-lg bg-global-red px-5 py-3 text-sm font-semibold text-white hover:opacity-95 focus:outline-none focus:ring-2 focus:ring-global-blue disabled:opacity-50 disabled:cursor-not-allowed">
              Submit Request
            </button>

            <p class="text-xs text-slate-500">
              By submitting, you agree to be contacted about your inspection request. For emergencies, call <a class="underline" href={`tel:${SITE.tel}`}>{SITE.phone}</a>.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.3s ease-out forwards;
  }
</style>

<script>
  // Load Turnstile script
  const turnstileScript = document.createElement('script');
  turnstileScript.src = 'https://challenges.cloudflare.com/turnstile/v0/api.js';
  turnstileScript.async = true;
  turnstileScript.defer = true;
  document.head.appendChild(turnstileScript);

  // Handle form submission
  const form = document.getElementById('inspection-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const successMsg = document.getElementById('form-success-message') as HTMLDivElement;
  const errorMsg = document.getElementById('form-error-message') as HTMLDivElement;
  const errorText = document.getElementById('error-message-text') as HTMLParagraphElement;
  const successText = document.getElementById('success-message-text') as HTMLParagraphElement;

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Hide previous messages
      successMsg.classList.add('hidden');
      errorMsg.classList.add('hidden');

      // Disable submit button
      submitBtn.disabled = true;

      try {
        // Get form data
        const formData = new FormData(form);

        // Send to endpoint
        const response = await fetch('/api/forms/inspection', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (response.ok && data.success) {
          // Show success message
          successText.textContent = data.message || 'Your inspection request has been received. We will call you within 2 hours.';
          successMsg.classList.remove('hidden');

          // Clear form
          form.reset();

          // Reset Turnstile
          if (window.turnstile) {
            (window.turnstile as any).reset();
          }

          // Auto-hide success after 5 seconds and re-enable button
          setTimeout(() => {
            successMsg.classList.add('hidden');
            submitBtn.disabled = false;
          }, 5000);
        } else {
          // Show error
          errorText.textContent = data.error || 'Something went wrong. Please try again.';
          errorMsg.classList.remove('hidden');
          submitBtn.disabled = false;

          // Reset Turnstile on error
          if (window.turnstile) {
            (window.turnstile as any).reset();
          }
        }
      } catch (error) {
        console.error('Form submission error:', error);
        errorText.textContent = 'Network error. Please check your connection and try again.';
        errorMsg.classList.remove('hidden');
        submitBtn.disabled = false;

        // Reset Turnstile on error
        if (window.turnstile) {
          (window.turnstile as any).reset();
        }
      }
    });
  }
</script>
