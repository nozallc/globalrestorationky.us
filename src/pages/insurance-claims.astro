---
import Layout from '@layouts/Layout.astro';
import { SITE } from '../lib/site';
const title = `Insurance Claim Roofing Help | ${SITE.name}`;
const description = 'Insurance-ready roof inspections, documentation, and adjuster support for storm, wind, and hail damage in Central Kentucky.';
---

<Layout title={title} description={description} canonical={`${SITE.url}/insurance-claims`}>
  <section class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-black text-global-blue">Insurance Claims</h1>
    <p class="mt-3 max-w-2xl text-base text-slate-700">
      We specialize in the paperwork and documentation side of restoration so your claim is supported by clear evidence.
    </p>

    <div class="mt-8 grid gap-4 md:grid-cols-3">
      {[
        ['Document damage', 'Photos, measurements, and a scope that speaks the adjuster’s language.'],
        ['Meet the adjuster', 'We help present facts and supporting details during the inspection.'],
        ['Restore properly', 'Roofing, gutters, siding, and related repairs done right.'],
      ].map(([t, d]) => (
        <div class="rounded-2xl border border-slate-200 bg-white p-6">
          <div class="text-lg font-extrabold text-slate-900">{t}</div>
          <p class="mt-2 text-sm text-slate-600">{d}</p>
        </div>
      ))}
    </div>

    <div class="mt-10 rounded-2xl border border-slate-200 bg-slate-50 p-6">
      <div class="text-lg font-extrabold text-slate-900">Start with a documented inspection</div>
      <p class="mt-2 text-sm text-slate-600">We’ll help you understand next steps and what to expect.</p>
      <div class="mt-4 flex gap-3">
        <a class="rounded-lg bg-global-red px-4 py-2.5 text-sm font-semibold text-white hover:opacity-95" href="/request-inspection">Request Inspection</a>
        <a class="rounded-lg border border-slate-300 px-4 py-2.5 text-sm font-semibold text-slate-900 hover:bg-white" href={`tel:${SITE.tel}`}>Call {SITE.phone}</a>
      </div>
    </div>
  </section>
</Layout>
