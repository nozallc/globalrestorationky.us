---
import type { ServiceAreaHub } from '../lib/serviceAreas';
export interface Props {
  hubs: ServiceAreaHub[];
}

const { hubs } = Astro.props as Props;
---

<nav aria-label="Service Areas">
  <ul class="space-y-6">
    {hubs.map((hub) => (
      <li>
        <section class="rounded-xl shadow-card transition-transform duration-200 hover:scale-[var(--card-hover-scale)] bg-white p-6">
          <h3 class="text-lg font-bold text-global-blue mb-1">
            <a href={hub.href} class="hover:underline">{hub.label}</a>
          </h3>
          <ul class="ml-4 mt-1 space-y-1">
            {hub.cities.map((city) => (
              <li>
                <a href={city.href} class="text-slate-700 hover:underline">{city.label} KY</a>
              </li>
            ))}
          </ul>
        </section>
      </li>
    ))}
  </ul>
</nav>
